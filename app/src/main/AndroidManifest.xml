<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jeanwest.reader">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES"/>

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Handheld"
        android:fullBackupContent="true"
        android:allowBackup="true">

        <activity android:name=".confirm.ConfirmScanningLogin"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".confirm.ConfirmScanningActivity"
            android:parentActivityName=".confirm.ConfirmScanningLogin"/>

        <activity android:name=".confirm.ConfirmScanningResultActivity"
            android:parentActivityName=".confirm.ConfirmScanningActivity"/>

        <activity android:name=".confirm.ConfirmScanningFindingProduct"
            android:parentActivityName=".confirm.ConfirmScanningResultActivity"/>

        <activity android:name=".transfer.TransferenceActivity"
            android:parentActivityName=".transfer.TransferenceActivityLogIn"/>

        <activity android:name=".transfer.TransferenceActivityLogIn"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".UserLoginActivity"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".finding.FindingProductSubActivity"
            android:parentActivityName=".finding.FindingProductActivity" />
        <activity
            android:name=".finding.FindingProductActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".warehouseScanning.WarehouseScanningSubResultActivity"
            android:parentActivityName=".warehouseScanning.WarehouseScanningResultActivity" />
        <activity
            android:name=".add.SettingActivity"
            android:parentActivityName=".AboutUsActivity" />
        <activity
            android:name=".warehouseScanning.WarehouseScanningResultActivity"
            android:parentActivityName=".warehouseScanning.WarehouseScanningActivity" />
        <activity
            android:name=".warehouseScanning.WarehouseScanningUserLogin"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".add.LoginToSettingActivity"
            android:parentActivityName=".AboutUsActivity" />
        <activity
            android:name=".AboutUsActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".warehouseScanning.WareHouseScanningFindingProduct"
            android:parentActivityName=".warehouseScanning.WarehouseScanningSubResultActivity" />
        <activity
            android:name=".warehouseScanning.WarehouseScanningActivity"
            android:parentActivityName=".warehouseScanning.WarehouseScanningUserLogin" />
        <activity
            android:name=".add.AddProductActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Handheld">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:grantUriPermissions="true"
            android:exported="false">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

    </application>

</manifest>