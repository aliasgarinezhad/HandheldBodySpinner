<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/White"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="addNewActivity"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="اضافه کردن"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:icon="@android:drawable/ic_menu_add"
        app:iconGravity="top"
        app:layout_constraintBottom_toTopOf="@+id/button15"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/White"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="readingActivity"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="انبارگردانی"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:icon="@android:drawable/ic_menu_sort_by_size"
        app:iconGravity="top"
        app:layout_constraintBottom_toTopOf="@+id/button16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button15"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/White"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="findingActivity"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="جست و جو"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:icon="@android:drawable/ic_menu_search"
        app:iconGravity="top"
        app:iconPadding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/addButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/button11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/White"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="settingActivity"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:text="درباره ما"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:icon="@android:drawable/ic_dialog_info"
        app:iconGravity="top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountButtonView" />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/White"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="advanceSettingButton"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="تنظیمات"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:icon="@android:drawable/ic_menu_preferences"
        app:iconGravity="top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button11"
        app:layout_constraintTop_toBottomOf="@+id/button16" />

    <Button
        android:id="@+id/accountButtonView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/White"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="logIn"
        android:text="ورود به حساب کاربری"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:icon="@android:drawable/ic_menu_my_calendar"
        app:iconGravity="top"
        app:layout_constraintBottom_toTopOf="@+id/button11"
        app:layout_constraintEnd_toStartOf="@+id/button16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button15" />

    <Button
        android:id="@+id/button15"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/White"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="transference"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="تعریف حواله"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:icon="@android:drawable/ic_input_get"
        app:iconGravity="top"
        app:layout_constraintBottom_toTopOf="@+id/accountButtonView"
        app:layout_constraintEnd_toStartOf="@+id/addButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button16"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/White"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="تایید حواله"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:icon="@android:drawable/ic_menu_view"
        app:iconGravity="top"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/accountButtonView"
        app:layout_constraintTop_toBottomOf="@+id/addButton" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:text="مدیریت محصولات"
        android:textColor="@color/Black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>