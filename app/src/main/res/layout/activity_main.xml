<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/main_appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/ic_baseline_menu_24"
            app:title="مدیریت محصولات"
            app:titleCentered="true"
            app:titleTextColor="@color/colorOnSecondary" />

    </com.google.android.material.appbar.AppBarLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/White"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="addNewActivity"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="اضافه کردن"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_baseline_add_circle_outline_24"
        app:iconGravity="top"
        app:iconTint="@color/Brown"
        app:layout_constraintBottom_toTopOf="@+id/button15"
        app:layout_constraintEnd_toStartOf="@+id/startFindingActivityButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_appBar" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/White"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="readingActivity"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="انبارگردانی"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_baseline_format_list_bulleted_24"
        app:iconGravity="top"
        app:iconTint="@color/Purple"
        app:layout_constraintBottom_toTopOf="@+id/button16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button15"
        app:layout_constraintTop_toBottomOf="@+id/startFindingActivityButton" />

    <Button
        android:id="@+id/startFindingActivityButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/White"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="findingActivity"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="جست و جو"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:icon="@android:drawable/ic_menu_search"
        app:iconGravity="top"
        app:iconTint="@color/Goldenrod"
        app:layout_constraintBottom_toTopOf="@+id/addButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/main_appBar" />

    <Button
        android:id="@+id/button11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/White"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="settingActivity"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:text="درباره ما"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:icon="@android:drawable/ic_dialog_info"
        app:iconGravity="top"
        app:iconTint="@color/DarkBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountButtonView" />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/White"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="advanceSettingButton"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="تنظیمات"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_baseline_settings_24"
        app:iconGravity="top"
        app:iconTint="@color/OrangeRed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button11"
        app:layout_constraintTop_toBottomOf="@+id/button16" />

    <Button
        android:id="@+id/accountButtonView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/White"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="logIn"
        android:text="ورود به حساب کاربری"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_baseline_person_24"
        app:iconGravity="top"
        app:iconTint="@color/MediumAquamarine"
        app:layout_constraintBottom_toTopOf="@+id/button11"
        app:layout_constraintEnd_toStartOf="@+id/button16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button15" />

    <Button
        android:id="@+id/button15"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/White"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="transference"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/transferText"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_baseline_directions_transit_24"
        app:iconGravity="top"
        app:iconTint="@color/YellowGreen"
        app:layout_constraintBottom_toTopOf="@+id/accountButtonView"
        app:layout_constraintEnd_toStartOf="@+id/addButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button16"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/White"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="confirmTransfer"
        android:text="@string/confirmText"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_baseline_playlist_add_check_24"
        app:iconGravity="top"
        app:iconTint="@color/DarkGreen"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/accountButtonView"
        app:layout_constraintTop_toBottomOf="@+id/addButton" />

</androidx.constraintlayout.widget.ConstraintLayout>