<resources>

    <style name="Theme.Handheld" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/jeanswest</item>
        <item name="colorPrimaryVariant">@color/White</item>
        <item name="colorOnPrimary">@color/Black</item>
        <item name="android:windowBackground">@color/jeanswestBackground</item>
        <item name="colorPrimaryDark">@color/jeanswest_status_bar</item>
        <item name="colorSecondary">@color/jeanswest</item>
        <item name="colorSecondaryVariant">@color/jeanswest_status_bar</item>
        <item name="colorOnSecondary">@color/White</item>
    </style>

    <style name="Theme.Handheld.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Handheld.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Handheld.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>