<resources>

    <style name="Theme.Handheld" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/Teal</item>
        <item name="colorPrimaryVariant">@color/White</item>
        <item name="colorOnPrimary">@color/Black</item>
        <item name="android:windowBackground">@color/pagesBackground</item>
        <item name="colorPrimaryDark">@color/teal_700</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/White</item>

    </style>

    <style name="Theme.Handheld.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Handheld.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Handheld.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>